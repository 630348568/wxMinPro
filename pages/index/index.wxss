/*欢迎界面*/

.wellcome {
	width: 100%;
	height: 100%;
	background-color: rgb(214, 215, 215);
	overflow-y: auto;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 70;
}
button{
position:absolute;
z-index:20}
.wellcome .wellcome_box {
	width: 75%;
	height: 36rem;
	background-color: #FEFEFE;
	box-shadow: 0 0 3px 0 #999 inset;
	box-shadow: 0 3px 0 #C8CAC9;
	position: absolute;
	left: 12.5%;
	top: 15%;
}

.wellcome_top {
	height: 25%;
	color: #888889;
	padding: 10%;
	font-size: 4rem;
	box-sizing: border-box;
	background-color: #3E3A39;
	text-align: center;
	border-bottom: 3px solid #C8CAC9;
}

.wellcome_bottom {
	margin-top: 5rem;
	height: 16rem;
	line-height: 16rem;
	font-size: 20px;
	text-align: center;
	position: relative;
}
.advertis{
	width: 100%;
	height: 100%;
}
.advertis img{
	width: 90%;
	height: 90%;
	margin: 10% 5% 5%;
}
.wellcome .time_down,.advertis .time_down{
	position: fixed;
	top: 1rem;
	right: 2%;
	text-align: center;
	font-size: 1.2rem;
}
.wellcome .time_down span ,.advertis .time_down span{
	color: #E50011;
}

@keyframes xuan {
	from {
		transform: rotate(0deg);
	}
	50% {
		transform: rotate(360deg);
	}
	to {
		transform: rotate(720deg);
	}
}

.wellcome_bottom .wellcome_ani {
	height: 15rem;
	width: 15rem;
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	margin: auto;
	border-radius: 50%;
	border-left: 6px solid #E50011;
	border-top: 3px solid #E50011;
	border-bottom: 6px solid rgba(229, 0, 17, 0.8);
	animation: xuan infinite 2s linear;
}